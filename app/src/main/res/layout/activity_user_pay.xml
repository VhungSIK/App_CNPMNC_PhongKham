<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/userIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="16dp"
        android:textColor="#000"
        android:text="User ID:" />

    <TextView
        android:id="@+id/billIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@id/userIdTextView"
        android:layout_margin="16dp"
        android:textColor="#000"
        android:text="Bill ID:" />

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@id/billIdTextView"
        android:layout_margin="16dp"
        android:textColor="#000"
        android:text="User Name:" />

    <TextView
        android:id="@+id/totalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@id/userNameTextView"
        android:layout_margin="16dp"
        android:textColor="#000"
        android:text="Total:" />
    <TextView
        android:id="@+id/payIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@id/totalTextView"
        android:layout_margin="16dp"
        android:textColor="#000"
        android:text="IDPay:" />
    <EditText
        android:id="@+id/newInfoEditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/payIdTextView"
        android:hint="New Info 1"
        android:inputType="number"
        android:layout_marginTop="8dp"/>
    <EditText
        android:id="@+id/newInfoEditText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newInfoEditText1"
        android:hint="New Info 1"
        android:inputType="number"
        android:layout_marginTop="8dp"/>
    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newInfoEditText2"
        android:layout_centerHorizontal="true"
        android:text="Save"
        android:layout_marginTop="16dp"/>


</RelativeLayout>
